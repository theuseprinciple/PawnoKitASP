
@{
    ViewBag.Title = "Менеджер клавиш";
}

<textarea id="kf_input" onkeydown="OnKeyDown(event.keyCode)" placeholder="Выдели это поле и нажми на клавишу" style="width: 575px; height: 30px;"></textarea>
<br />
<br />
<form name="keymodeform" style="float: right;" onchange="OnKeyModeChange()">
    <INPUT TYPE="radio" NAME="keymode" VALUE="keystd" checked><label for=""><p>Прыжок - Shift, ускорение - пробел</p></label>
    <INPUT TYPE="radio" NAME="keymode" VALUE="keyme"><label for=""><p>Прыжок - пробел, ускорение - Shift</p></label>

</form>
<form>
    <INPUT TYPE="radio" NAME="state" VALUE="OnFoot" checked><label for=""><p>Игрок на ходу</p></label>
    <INPUT TYPE="radio" NAME="state" VALUE="InVehicle"><label for=""><p>Игрок в машине</p></label>
</form>
<br />
<br />
