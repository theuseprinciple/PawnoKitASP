<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!-->
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="PawnoKit - Набор скриптера SAMP">
    <meta name="Keywords" content="PawnoKit, PawnKit, Pawno, Скриптинг">
    <!--[if lt IE 9]><script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script><![endif]-->
    <link type="text/css" rel="stylesheet" href="@Styles.Url("~/Content/css")">
    <script src="@Scripts.Url("~/Scripts/jquery-1.10.2.min.js")"></script>

    <script type="text/javascript" src="//vk.com/js/api/openapi.js?121"></script>

    <script src="@Scripts.Url("~/Scripts/pawnokit.js")"></script>

    @if (2 > 1) // LOAD WITH PAGER
    {
        <script src="@Scripts.Url("~/Scripts/history.js")"></script>
        <script src="@Scripts.Url("~/Scripts/pawnokitpager.js")"></script>
    }

    
    @if (ViewBag.StyleUrl != null)
    {
        <link href="@ViewBag.StyleUrl" rel="stylesheet" type="text/css" />
        if (2 > 1)// LOAD WITH PAGER
        {
            <script>
                PawnoKitPager.markStyleAsLoaded("@ViewBag.StyleUrl");
            </script>
        }
    }

    @if (ViewBag.ScriptUrl != null)
    {
        <script src="@ViewBag.ScriptUrl"></script>
    }

    <script>$(document).ready(function () { PawnoKit.improveLinks("a:not(.external)") });</script>
    <link rel="shortcut icon" href="/pfavicon.png" type="image/x-icon">
    <title>@ViewBag.Title - PawnoKit</title>
</head>
<body>
    <div id="wrapper">
        <div id="middle">
            <div id="container">
                <div id="content">
                    <!-- Render body -->
                    @RenderBody()
                </div>
            </div>
            <div id="aside-nav">
                <div class="menu">
                    <div class="item">
                        @Html.ActionLink("Главная", "Index")
                    </div>
                    <div class="item">
                        @Html.ActionLink("IDs", "IDs")
                        <div class="submenu">
                            @Html.Partial("_ShowIDs")
                        </div>
                    </div>
                    <div class="item">
                        @Html.ActionLink("Сервисы", "Tools")
                        <div class="submenu">
                            @Html.Partial("_ShowTools")
                        </div>
                    </div>
                    
                    <div class="item">
                        @Html.ActionLink("Общая информация", "MainInfo")
                        <div class="submenu">
                            @Html.Partial("_ShowMainInfo")
                        </div>
                    </div>

                    <div class="item">
                        @Html.ActionLink("Библиотека", "Library")
                        <div class="submenu">
                            @Html.Partial("_ShowLibs")
                        </div>
                    </div>

                    <div class="item">
                        @Html.ActionLink("Загрузить SA-MP", "DownloadSAMP")
                        <div class="submenu">
                            @Html.Partial("_ShowDownloadSAMP")
                        </div>
                    </div>

                    
                    
                </div> <!-- menu -->
            </div> <!-- Aside nav -->
        </div>
    </div>
</body>
</html>
